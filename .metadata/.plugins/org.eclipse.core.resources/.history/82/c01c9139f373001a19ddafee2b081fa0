<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
</head>
<body>
	<script type="text/javascript">
	//사용자에게 자주 이용하는 포털 사이트 이름을 입력 받는다
	var site = prompt("네이버, 다음, 네이트, 구글 중에서 즐겨 사용하는 포털사이트 이름을 입력하세요", "")
	var url; //사이트 주소 저장
	switch (site) {
		case "네이버":
			url =  "http://www.naver.com";
			break;
		case "다음":
			url =  "http://www.daum.net";
			break;
		case "네이트":
			url =  "http://www.nate.com";
			break;
		case "구글":
			url =  "http://www.google.com";
			break;
		default:
			alert("보기 중에 없는 사이트 이름을 입력했습니다");
	}
	
	if(url){
		//자바스크립트 location객체내부의 href속성(변수)의 값을 이동할 사이트 주소를 저장하면 
		//해당 사이트로 자동으로 이동한다
		location.href = url;
	}
	
	</script>
</body>
</html>