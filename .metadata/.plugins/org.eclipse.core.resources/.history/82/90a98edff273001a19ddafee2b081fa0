<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
</head>
<body>
	<script type="text/javascript">
	//사용자에게 자주 이용하는 포털 사이트 이름을 입력 받는다
	var site = prompt("네이버, 다음, 네이트, 구글 중에서 즐겨 사용하는 포털사이트 이름을 입력하세요", "")
	var url; //사이트 주소 저장
	switch (site) {
		case "네이버":
			url =  "http://www.naver.com";
			document.write("네이버");
			break;
		case "다음":
			url =  "http://www.daum.net";
			document.write("다음");
			break;
		case "네이트":
			url =  "http://www.nate.com";
			document.write("네이트");
			break;
		case "구글":
			url =  "http://www.google.com";
			document.write("구글");
			break;
		default:
			alert("보기 중에 없는 사이트 이름을 입력했습니다");
			
	}
	
	
	</script>
</body>
</html>