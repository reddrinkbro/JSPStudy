<body>
	<script type="text/javascript">
	
		//현재 날짜 정보를 제공해주는 Date객체 메모리 생성
		var d = new Date();
		
		//Date 객체의 getMonth()메소드를 호출하면
		//getMonth()메소드는 개발자에게 되돌려주는 값은 현재 월의 정보를 되돌려준다.
		//참고 : 현재 월을 반환하면 1적게 나온다
		var nowMonth = d.getMonth()+ 1;
		
		//Date객체의 getDate()함수를 호출하면
		//우리한테 되돌려 주는 값은 현재 일자를 반환함
		var nowDate = d.getDate();
		alert(nowDate);
	
	</script>
</body>
